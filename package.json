{
  "name": "swiftlet",
  "version": "1.1.2",
  "description": "Web dev build tool",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./cli": {
      "require": "./dist/cli/index.js"
    }
  },
  "bin": {
    "swiftlet": "bin/swiftlet.js"
  },
  "scripts": {
    "dev": "ts-node ./src/cli/index.ts dev",
    "build": "rimraf dist && tsc",
    "build:watch": "tsc -w",
    "format": "prettier --write .",
    "test": "jest",
    "prepare": "husky install",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx",
    "lint:fix": "eslint . --ext .js,.jsx,.ts,.tsx --fix",
    "format:check": "prettier --check .",
    "type-check": "tsc --noEmit",
    "commit:check": "lavy commit --test",
    "commit:config": "lavy commit --config"
  },
  "files": [
    "dist",
    "bin",
    "compiled"
  ],
  "keywords": [
    "frontend",
    "hmr",
    "dev-server",
    "build-tool",
    "bundler",
    "bundling",
    "swiftlet"
  ],
  "author": "GavinRay <gavinbirkhoff@gmail.com> (https://github.com/gvray)",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0"
  },
  "bugs": {
    "url": "https://github.com/gvray/swiftlet/issues"
  },
  "homepage": "https://github.com/gvray/swiftlet#readme",
  "devDependencies": {
    "@eslint/js": "^9.15.0",
    "@types/fs-extra": "^11.0.4",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.10.1",
    "@typescript-eslint/eslint-plugin": "^8.16.0",
    "@typescript-eslint/parser": "^8.16.0",
    "eslint": "^9.15.0",
    "eslint-config-lavy": "^2.0.2",
    "eslint-import-resolver-typescript": "^3.7.0",
    "eslint-plugin-import": "^2.31.0",
    "globals": "^15.12.0",
    "husky": "^9.1.0",
    "jest": "^29.7.0",
    "lavy": "^2.0.3",
    "lint-staged": "^15.2.0",
    "prettier": "^3.3.0",
    "rimraf": "^5.0.5",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.1",
    "tsx": "^4.19.0",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "@rollup/plugin-terser": "^0.4.4",
    "@rollup/plugin-typescript": "^11.1.6",
    "boxen": "^8.0.1",
    "cac": "^6.7.14",
    "chalk": "4",
    "commander": "^11.1.0",
    "fs-extra": "^11.2.0",
    "jiti": "^1.21.0",
    "ora": "^5.4.1",
    "rollup": "^4.6.1",
    "rollup-plugin-dts": "^6.1.0",
    "tapable": "^2.2.1"
  },
  "lint-staged": {
    "*.{ts}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,yml,yaml}": [
      "prettier --write"
    ]
  }
}
